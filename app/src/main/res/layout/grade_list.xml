<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grade_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/grade_list_img"
            android:src="@drawable/grades"
            android:layout_width="70dp"
            android:layout_height="75dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/subject"
                android:text="Math"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/prof"
                android:text="Garcia, Julieta,"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/pregrade"
                android:text="Prelim: 3, Midterm: 1, Finals: 1"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/postgrade"
                android:text="Final Grade: 3, Average: 1, Status: 1"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
